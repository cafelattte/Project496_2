<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/adrs_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="20dp"
        android:src="@drawable/captain" />
    <LinearLayout
        android:id="@+id/adrs_info"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/adrs_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:text="Name"
            android:textSize="18dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/adrs_number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:text="User_Number"
            android:textSize="14dp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adrs_pbimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="#78E9F8" />

        <ImageView
            android:id="@+id/adrs_fbimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="#FBEA46" />

        <ImageView
            android:id="@+id/adrs_glimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="#42E2A8" />
    </LinearLayout>

</LinearLayout>
